<div>
  <h2>Which seed?</h2>
  <br>
  <br>
  <%= form_tag do |f| %>

    <div class="row">
      <div class="medium-4 columns">
        <label>Soil Type
          <%= select(:name, :id, { :prompt => true }, { include_blank: '(none selected)' }) do %>
            <%= options_from_collection_for_select(@soil_types, :id, :name) %>
          <% end %>
        </label>
      </div>

      <div class="medium-4 columns">
        <label>Annual Precipitation (inches)
          <%= select(:amount, :id, { :prompt => true }, { include_blank: '(none selected)'  }) do %>
            <%= options_from_collection_for_select(@annual_precipitation_values, :id, :amount) %>
          <% end %>
        </label>
      </div>

      <div class="medium-4 columns">
        <label>Salt Tolerance
          <%= select(:level, :id, { :prompt => true }, { include_blank: '(none selected)' }) do %>
            <%= options_from_collection_for_select(@salt_tolerances, :id, :level) %>
          <% end %>
        </label>
      </div>
    </div>

  <% end %>
</div>